generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int @id @default(autoincrement())
  email String @unique
  name  String?
  hashedPassword String?
  createdAt DateTime @default(now())
}

model Doc {
  id    Int @id @default(autoincrement())
  slug  String @unique
  title String
  content String
  ownerId Int?
  createdAt DateTime @default(now())
}
